doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title CSV Data Viewer
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css", rel="stylesheet")
  body
    .container.mt-5
      h1.mb-4 CSV Data Viewer
      table#csvTable.table.table-striped.table-hover
        thead
          tr
            th File name
            th Number of check-ins
            th Edit
        tbody
    
    #detailModal.modal.fade(tabindex="-1")
      .modal-dialog.modal-lg
        .modal-content
          .modal-header
            h5#detailModalLabel.modal-title.text-black CSV Details
            button.btn-close(type="button", data-bs-dismiss="modal")
          .modal-body
            table#detailTable.table.table-striped
              thead
                tr
                  th Label
                  th Check-in time
              tbody
          .modal-footer
            button.btn.btn-secondary(type="button", data-bs-dismiss="modal") Close

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
    script(src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js")
    script(src="../../../js/tablecsv.js")